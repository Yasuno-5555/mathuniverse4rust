[package]
name = "math_universe_shinen"
version = "0.1.0"
edition = "2021"
description = "High-performance Geometric Algebra (Clifford Algebra) implementation"
license = "MIT OR Apache-2.0"
repository = "https://github.com/Yasuno-5555/mathuniverse4rust"
keywords = ["math", "geometric-algebra", "clifford-algebra"]
categories = ["science", "mathematics"]

[dependencies]
num-traits = { workspace = true }
pyo3 = { workspace = true, optional = true }
rayon = { workspace = true }

[dev-dependencies]
criterion = "0.5"
rand = { workspace = true }

[features]
python = ["dep:pyo3"]

[[bench]]
name = "shinen_bench"
harness = false
