[package]
name = "math_universe_sokudo"
version = "0.1.0"
edition = "2021"
description = "Fast stochastic simulations and financial math with parallel execution"
license = "MIT OR Apache-2.0"
repository = "https://github.com/Yasuno-5555/mathuniverse4rust"
keywords = ["math", "stochastic", "simulation", "finance"]
categories = ["science", "mathematics"]

[dependencies]
rand = { workspace = true }
rand_distr = "0.4"
num-traits = { workspace = true }
pyo3 = { workspace = true, optional = true }
rayon = { workspace = true }

[dev-dependencies]
criterion = "0.5"

[features]
python = ["dep:pyo3"]

[[bench]]
name = "sokudo_bench"
harness = false
